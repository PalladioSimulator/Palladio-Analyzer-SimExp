const float lowerThreshold = 1.0;
const float upperThreshold = 2.0;

probe float responseTime : "Usage Scenario: EnvironmentPerception_Response Time";

action Step1Outsource();
action Step1ScaleIn();

if (responseTime >= upperThreshold) {
	Step1Outsource();
}

if (responseTime <= lowerThreshold) {
	Step1ScaleIn();	
}